generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  clerkId        String   @unique
  name           String
  username       String   @unique
  bio            String?
  Posts          Posts?   @relation(fields: [postsId], references: [id])
  postsId        String?  @db.ObjectId
  friends        Friend[]
  friendRequests String[]
}

model Posts {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  imageId String
  caption String
  tags    String[]
  likes   User[]
}

model ChatLogs {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  betweenUser1 String
  betweenUser2 String
  messages     Message[]
}

type Message {
  senderId    String
  recipientId String
  message     String
}

type Friend {
  username String
  name     String
  clerkId  String
}
